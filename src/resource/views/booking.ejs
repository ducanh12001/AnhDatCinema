    <!--body-->
    <!--Chon ve-->
    <form method="post" action="/booking/<%= log.UserToken %>/<%= Phim %>">
    <div style="text-align:center" id="opt">
      <div>
        Chọn khu vực
        <select id="cumselect">
        <% cum.map(item=>{ %>
          <option><%= item.TenCum %></option>
        <% }) %>
        </select>
      </div>
      <div>
        chọn rạp
        <select id="rapselect">
        <% Rap.map(item=>{ %>
          <% SuatChieu.map(item2=>{ %>
          <% if (item2.rapId == item.id && item2.phimId == Phim) { %>
          <option><%= item.TenRap %></option>
          <% } %>
          <% }) %>
        <% }) %>
        </select>
      </div>
      <div>
        chọn khung giờ
        <select id="gioselect">
        <% SuatChieu.map(item=>{ %>
          <% if (item.phimId == Phim) { %>
          <option><%= item.ThoiDiemBatDau %></option>
          <% } %>
        <% }) %>
        </select>
      </div>
      <div>
        Giá: 
        <select id="giaselect">
          <option>70000-người lớn</option>
          <option>40000-trẻ em</option>
        </select>
      </div>
    </div>
    <button id ="btn-save" style="text-align:center;margin-left: 700px;margin-top: 100px;" > Xác nhận đặt vé</button>
